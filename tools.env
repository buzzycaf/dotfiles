# Archbento Tools Framework (source of truth)
# Format: KEY=VALUE (no quotes, no shell syntax)

# Terminal / shell
TERMINAL=kitty
SHELL=zsh

# Editors
EDITOR=micro
GUI_EDITOR=code

# File managers
TUI_FILE_MANAGER=yazi
GUI_FILE_MANAGER=dolphin

# Launcher
LAUNCHER=fuzzel

# Browser
BROWSER=chromium

# Media / viewing helpers
MEDIA_PLAYER=mpv
IMAGE_VIEWER=imv
PDF_VIEWER=okular

# Notifications
NOTIFY_DAEMON=mako

# System control
POWER_MENU=wlogout
LOCKER=hyprlock
IDLE_DAEMON=hypridle

# Capture (optional defaults)
SCREENSHOT_TOOL=grimblast
SCREEN_RECORD_TOOL=wf-recorder

# Audio
AUDIO_CONTROL=wpctl
